ion-view(title='{{note.title}}')
  ion-content(has-header='true', padding='true')
    button.button.button-calm(ng-click='snap()') Take Photo
    button.button.button-energized(ng-click='choose()') Choose Photo

    .list.card
      h4 {{moment(note.updated_at).format('MMMM Do YYYY @ h:mm:ss a')}}

      .item.item-body
        p {{note.body}}

      item.item-image(ng-repeat='url in note.urls')
        img(ng-src='{{url}}')
        p &nbsp;
